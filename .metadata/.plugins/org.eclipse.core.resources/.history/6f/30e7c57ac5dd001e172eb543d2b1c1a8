	@Test
	void testJpa() {
	
		for(int i=1; i<=100; i++) {
			
			Question question = new Question();
			question.setSubject(i+"번 째 질문입니다.");
			question.setCreateDate(LocalDateTime.now());
			question.setContent(i+"번 질문 내용 입니다.");
			
			questionRepository.save(question);
			
		}
		
		
		
	}

